            android:name="com.vkshoplist.sfilatov96.vkshoplist.MainActivity"
            android:label="VkShopList"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.vkshoplist.sfilatov96.vkshoplist.CreateListActivty" />
